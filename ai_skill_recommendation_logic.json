  "recommendation_algorithm": {
    "steps": [
      "Identify user's degree/course from education section",
      "Map degree to relevant skill categories using degree_skill_mapping",
      "Select top 5-7 skills from primary categories",
      "Select 3-5 skills from secondary categories",
      "Include 3-4 relevant soft skills",
      "Adjust recommendations based on user_type (fresher vs experienced)",
      "For experienced users, prioritize skills matching their work experience",
      "For freshers, emphasize foundational skills in their field",
      "Allow user to accept, reject, or modify suggested skills",
      "Store user's custom skills alongside AI recommendations"
    ],
    "weighting_factors": {
      "degree_relevance": 0.4,
      "user_type": 0.2,
      "experience_match": 0.25,
      "market_demand": 0.15
    }
  },
  "skill_balance_rules": {
    "fresher": {
      "technical": 60,
      "non_technical": 25,
      "soft": 15,
      "description": "Higher emphasis on technical skills for freshers"
    },
    "experienced": {
      "technical": 50,
      "non_technical": 30,
      "soft": 20,
      "description": "Balanced distribution for experienced professionals"
    }
  },
  "api_endpoints": {
    "get_skills": {
      "method": "POST",
      "path": "/api/skill-recommendations",
      "request_body": {
        "degree": "string",
        "user_type": "string",
        "experience": "array",
        "custom_skills": "array"
      },
      "response": {
        "recommended_skills": "array",
        "skill_categories": "object",
        "explanation": "string"
      }
    }
  }
